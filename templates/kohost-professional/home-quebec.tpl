  <script>

    async function getData (url) {
      const res = await fetch(url)
      const data = await res.text()

      let parsedData = data.replace("<pre>","")
      parsedData = parsedData.replace("</pre>","")
      parsedData = JSON.parse(parsedData)
      return parsedData
    }

    // ------------------------ 
    // PLANS 
